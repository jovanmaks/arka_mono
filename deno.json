{
  "workspace": ["./packages/lib", "./apps/api", "./apps/web"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "importMap": "./import_map.json",
  "tasks": {
    "format": "deno fmt",
    "lint": "deno lint",
    "test": "deno test --allow-all",

    "web:build": "deno run -A apps/web/build.ts",
    "web:serve": "deno run --allow-net --allow-read https://deno.land/std@0.203.0/http/file_server.ts apps/web/dist --host=localhost",
    
    "api:scanner": "cd apps/api/src && python app.py",
    "api:serve": "deno run --allow-net --allow-read --import-map=./import_map.json --watch apps/api/src/main.ts",
    
    "app:serve": "deno task api:scanner & deno task web:serve",
    
    "lib:test": "cd packages/lib && deno test --allow-all",

    "deploy": "deployctl deploy --project arka"
  },
    "deploy": {
    "entrypoint": "apps/web/app/main.tsx"
  }
}
